<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meme_back">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/important"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/important" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/department"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/department" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/event"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/event" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/placement"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/placement" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/batch"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/batch" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/student"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:src="@drawable/student" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/faculty"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/faculty" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>